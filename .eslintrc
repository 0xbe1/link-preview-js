{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "require": true,
    "__DEV__": true,
    "__NOVALNET_PRODUCTION__": true,
    "__API_URL__": true,
    "__ROOT_URL__": true,
    "__VERSION_DATE___": true,
    "__MIXPANEL_TOKEN__": true,
    "module": true
  },
  "extends": "airbnb",
  "rules": {
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "import/no-named-as-default": 0,
    "import/first": 0,
    "prefer-template": 0,
    "arrow-body-style": 0,
    "no-underscore-dangle": 0,
    "no-plusplus": 0,
    "no-unused-vars": [
      1,
      {
        "vars": "local",
        "args": "none"
      }
    ],
    "indent": [2, 2],
    "linebreak-style": [2, "unix"],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "class-methods-use-this": 0,
    "space-before-function-paren": 0,
    "func-names": 0,
    "prefer-arrow-callback": 0
  }
}
